<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A5C9CA"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/number0"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:backgroundTint="#395B64"
                android:text="1"
                android:textColor="#E7F6F2"
                android:textSize="30sp" />

            <Button
                android:id="@+id/number1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:backgroundTint="#395B64"
                android:text="2"
                android:textColor="#E7F6F2"
                android:textSize="30sp" />

            <Button
                android:id="@+id/number2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:backgroundTint="#395B64"
                android:text="3"
                android:textColor="#E7F6F2"
                android:textSize="30sp" />

            <Button
                android:id="@+id/number3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:backgroundTint="#395B64"
                android:text="4"
                android:textColor="#E7F6F2"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/number4"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:backgroundTint="#395B64"
                android:text="5"
                android:textColor="#E7F6F2"
                android:textSize="30sp" />

            <Button
                android:id="@+id/number5"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:backgroundTint="#395B64"
                android:text="6"
                android:textColor="#E7F6F2"
                android:textSize="30sp" />

            <Button
                android:id="@+id/number6"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:backgroundTint="#395B64"
                android:text="7"
                android:textColor="#E7F6F2"
                android:textSize="30sp" />

            <Button
                android:id="@+id/number7"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:backgroundTint="#395B64"
                android:text="8"
                android:textColor="#E7F6F2"
                android:textSize="30sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/number8"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:backgroundTint="#395B64"
                android:text="9"
                android:textColor="#E7F6F2"
                android:textSize="30sp" />

            <Button
                android:id="@+id/number9"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:backgroundTint="#395B64"
                android:text="10"
                android:textColor="#E7F6F2"
                android:textSize="30sp" />

            <Button
                android:id="@+id/number10"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:backgroundTint="#395B64"
                android:text="11"
                android:textColor="#E7F6F2"
                android:textSize="30sp" />

            <Button
                android:id="@+id/number11"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:backgroundTint="#395B64"
                android:text="12"
                android:textColor="#E7F6F2"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/number12"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:backgroundTint="#395B64"
                android:text="13"
                android:textColor="#E7F6F2"
                android:textSize="30sp" />

            <Button
                android:id="@+id/number13"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:backgroundTint="#395B64"
                android:text="14"
                android:textColor="#E7F6F2"
                android:textSize="30sp" />

            <Button
                android:id="@+id/number14"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:backgroundTint="#395B64"
                android:text="15"
                android:textColor="#E7F6F2"
                android:textSize="30sp" />

            <Button
                android:id="@+id/number15"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:backgroundTint="#395B64"
                android:textColor="#E7F6F2"
                android:textSize="30sp" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btnPlay"
        android:layout_width="137dp"
        android:layout_height="74dp"
        android:layout_marginTop="28dp"
        android:background="#E7F6F2"
        android:text="Play"
        android:textColor="#388E3C"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.197"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

    <Button
        android:id="@+id/btnExit"
        android:layout_width="137dp"
        android:layout_height="74dp"
        android:layout_marginTop="28dp"
        android:background="#E7F6F2"
        android:text="EXIT"
        android:textColor="#C21818"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.817"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number Puzzle"
        android:textColor="#2C3333"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.242" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 to 15"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.772" />

</androidx.constraintlayout.widget.ConstraintLayout>